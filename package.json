{
  "name": "tailwind-compositor-starter-static",
  "private": true,
  "description": "Starter kit for tailwind-compositor",
  "author": "Apostolos Christodoulou <a7sc11u@gmail.com> (@a7sc11u)",
  "license": "MIT",
  "keywords": [
    "compositor",
    "tailwindcss",
    "typography",
    "baseline",
    "vertical-rhythm"
