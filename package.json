    "parcel": "^1.12.4",
    "postcss": "^7.0.36",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "stylelint": "^13.5.0",
    "stylelint-config-standard": "^20.0.0",
    "tailwind-compositor": "^0.0.1-rc.16",
    "tailwindcss": "^1.4.6"
  },
  "browserslist": "> 1%, not ie 11, not op_mini all"
}
